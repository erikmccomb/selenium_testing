%h1 All Of My Monies
%hr

- if @bank_accounts.any?
  %ul
    - @bank_accounts.each do |bank_account|
      %li.bank-account
        %h3
          Institution: = bank_account.institution
        %p
          Description: = bank_account.description
        = link_to 'Delete', bank_account_path(bank_account), method: :delete
- else
  %h3 No Bank Accounts, Please Create One!

%br

= link_to 'New Bank Account', new_bank_account_path, id: 'new-bank-account'